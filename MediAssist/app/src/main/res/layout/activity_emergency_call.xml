<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bsn.mediassist.emergencycalls.EmergencyCallActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Relative Contact #1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/doc_num" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Relative Contact #2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/r1_num" />

    <TextView
        android:id="@+id/name_text"
        android:layout_height="80dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@color/colorAccent"
        android:gravity="center_vertical"
        android:paddingLeft="14dp"
        android:text="Emergency Call Settings"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintHorizontal_bias="0.505" />

    <EditText
        android:id="@+id/doc_num"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:ems="10"
        android:inputType="number"

        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/name_text" />

    <EditText
        android:id="@+id/r1_num"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="number"

        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/r2_num"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="number"

        android:layout_marginTop="-1dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:text="Doctor's Contact"
        app:layout_constraintBottom_toTopOf="@+id/doc_num"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_text"
        app:layout_constraintVertical_bias="0.611" />

    <ImageView
        android:id="@+id/doc_msg"
        android:layout_width="33dp"
        android:layout_height="43dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="12dp"
        android:tint="@color/colorHealthy"
        app:layout_constraintLeft_toRightOf="@+id/doc_num"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/ic_menu_send" />

    <ImageView
        android:id="@+id/r1_msg"
        android:layout_width="33dp"
        android:layout_height="43dp"
        android:tint="@color/colorHealthy"
        app:srcCompat="@drawable/ic_menu_send"
        app:layout_constraintLeft_toRightOf="@+id/r1_num"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:id="@+id/r2_msg"
        android:layout_width="33dp"
        android:layout_height="43dp"
        android:tint="@color/colorHealthy"
        app:srcCompat="@drawable/ic_menu_send"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintLeft_toRightOf="@+id/r2_num"
        android:layout_marginLeft="19dp" />

    <ImageView
        android:id="@+id/doc_call"
        android:layout_width="36dp"
        android:layout_height="43dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="13dp"
        android:tint="@color/colorHealthy"
        app:layout_constraintLeft_toRightOf="@+id/doc_msg"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@android:drawable/ic_menu_call"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/r1_call"
        android:layout_width="36dp"
        android:layout_height="43dp"
        android:tint="@color/colorHealthy"
        app:srcCompat="@android:drawable/ic_menu_call"
        app:layout_constraintLeft_toRightOf="@+id/r1_msg"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="-1dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/r2_call"
        android:layout_width="36dp"
        android:layout_height="43dp"
        android:tint="@color/colorHealthy"
        app:srcCompat="@android:drawable/ic_menu_call"
        app:layout_constraintLeft_toRightOf="@+id/r2_msg"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="-1dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.833" />

    <Button
        android:visibility="gone"
        android:id="@+id/save_button"
        android:layout_width="133dp"
        android:layout_height="47dp"
        android:layout_marginLeft="235dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="15dp"
        android:text="Save"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/r2_num" />

    <Button
        android:visibility="gone"
        android:id="@+id/edit_button"
        android:layout_width="133dp"
        android:layout_height="47dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp"
        android:text="Edit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/r2_num" />


</android.support.constraint.ConstraintLayout>
